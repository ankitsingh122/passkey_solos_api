{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "resolveJsonModule": true,
        "strict": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "noImplicitThis": false
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.json",
    ],
    "exclude": [
        "node_modules"
    ]
}